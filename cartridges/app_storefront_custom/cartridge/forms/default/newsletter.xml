<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
		<field 
			formid="fullname" 
			label="label.input.fullname.newsletter" 
			mandatory="true" 
			max-length="100"
			missing-error="error.message.required" 
			range-error="error.message.100orless" 
			type="string" />

		<field 
			formid="skinType" 
			label="label.input.skinType.newsletter" 
			mandatory="false" 
			max-length="50" 
			missing-error="error.message.required"
			range-error="error.message.50orless" 
			type="string" />

		<field
			formid="email" 
			label="label.input.email.newsletter" 
			mandatory="true" 
			max-length="50" 
			missing-error="error.message.required"
			parse-error="error.message.parse.email.newsletter.form"
			range-error="error.message.50orless"
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" 
			value-error="ValueErrorText"
			type="string"/> 
</form>